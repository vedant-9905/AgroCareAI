<resources>
    <style name="Theme.AgroCareAI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/brand_green_mid</item>
        <item name="colorSecondary">@color/brand_yellow</item>
        <item name="android:colorBackground">?attr/colorSurfaceVariant</item>
    </style>

    <style name="AgroCard">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>